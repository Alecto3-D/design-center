bundle common validators
{
  vars:
      "v[PATH]"             string => "/.*";
      "v[OCTAL]"            string => "[0-7]+";
      "v[DIGITS]"           string => "[0-9]+";
      "v[NON_EMPTY_STRING]" string => "(?!\\$\\(.+\\)).+"; # don't match $(...) unexpanded variables
      "v[BOOLEAN]"          string => "(?i)true|false|on|off|1|0";
      "v[HTTP_URL]"         string => "(git|https?)://.+"; # this is not a good URL regex
}
